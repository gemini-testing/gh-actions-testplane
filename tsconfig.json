{
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts", "src/__mocks__", "testplane-project-example"],
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "NodeNext",
        "rootDir": "src",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    }
}
