{
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "testMatch": [
    "**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "isolatedModules": true,
        "useESM": true
      }
    ]
  }
}
